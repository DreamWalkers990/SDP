task main()
{
    SetSensorLight(IN_1);
    SetSensorLight(IN_2);
    while (Sensor(IN_1) and Sensor(IN_2)) > 30)
        OnFwd(OUT_A, 100);
        OnFwd(OUT_C, 100);
        until ((Sensor(IN_1) or Sensor(IN_2)) < 30)
        OnFwd(OUT_A, 50);
}

//Wenn dein Code nicht funktioniert , dann testen wir das
